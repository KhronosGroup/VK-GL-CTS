         %29 = OpConstant %25 1
         %30 = OpConstant %25 0
         %31 = OpConstantComposite %26 %29 %30 %30 %29
         %33 = OpConstantComposite %26 %29 %29 %29 %29
          %4 = OpFunction %2 None %3
