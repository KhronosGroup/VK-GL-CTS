               OpSource ESSL 310
               OpName %4 "main"
               OpName %7 "buf0"
               OpMemberName %7 0 "one"
               OpName %9 ""
               OpName %28 "_GLF_color"
               OpMemberDecorate %7 0 Offset 0
               OpDecorate %7 Block
               OpDecorate %9 DescriptorSet 0
               OpDecorate %9 Binding 0
               OpDecorate %28 Location 0
          %2 = OpTypeVoid
          %3 = OpTypeFunction %2
          %6 = OpTypeInt 32 1
          %7 = OpTypeStruct %6
          %8 = OpTypePointer Uniform %7
