#   if(data[i] < data[0]) {
#    if(false) {
#     if(float(i) >= 1.0) { }
#    }
#    switch(0) {
#     case 1:
#      for(; 1 > 0;) { }
#      for(;;) { }
#     case 0:
#      data[0] = 2.0;
#      break;
#    }
#   }
#  }
