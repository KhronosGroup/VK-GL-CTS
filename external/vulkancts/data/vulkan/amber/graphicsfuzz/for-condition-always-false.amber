               OpName %12 "drawShape(vf2;"
               OpName %11 "pos"
               OpName %16 "c3"
               OpName %43 "param"
               OpName %47 "color"
               OpDecorate %47 Location 0
          %2 = OpTypeVoid
          %3 = OpTypeFunction %2
          %6 = OpTypeFloat 32
          %7 = OpTypeVector %6 2
          %8 = OpTypePointer Function %7
          %9 = OpTypeVector %6 3
