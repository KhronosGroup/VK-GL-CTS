# layout(location=0) out vec4 color;
#
# vec3 drawShape(vec2 pos)
# {
#  bool c3;
#  c3 = pos.y < 1.0;
#  for(
#      ivec2(8576, 72916);
#      c3;
#      bvec2(false, false)
#  )
#   {
#    return vec3(1.0);
#   }
#  return vec3(1.0);
# }
# void main()
# {
#  drawShape(vec2(1.0));
#  color = vec4(1, 0, 0, 1);
# }
