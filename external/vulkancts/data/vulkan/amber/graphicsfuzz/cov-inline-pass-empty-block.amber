#     if (gl_FragCoord.x < 0.0)
#         x = 0.5;
#
#     return vec4(x, 0, 0, 1);
# }
#
# void main()
# {
#     _GLF_color = vec4(0);
#
#     do
#     {
#         _GLF_color = func();
#     }
#     while (false);
# }
