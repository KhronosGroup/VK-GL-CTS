      %exp_0 = OpVariable %_ptr_Function_v3int Function
      %res_0 = OpVariable %_ptr_Function_frexpStructType Function
         %38 = OpAccessChain %_ptr_Input_float %position %uint_0
         %39 = OpLoad %float %38
