	case core_gl_FragColor
		version 420
		expect compile_fail
		vertex ""
			#version 420
			${VERTEX_DECLARATIONS}
			void main()
			{
				${VERTEX_OUTPUT}
			}
		""
		fragment ""
			#version 420
			void main()
			{
				gl_FragColor = vec4(1.0);
			}
		""
	end

